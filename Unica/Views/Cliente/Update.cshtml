@model Cliente

<form asp-controller="Cliente" asp-action="Update" method="POST">
    <div class="form-row">
        <div class="form-group col-md-8">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Status</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Telefone</label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone"></span>
        </div>

        <div class="form-group col-md-6">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Logradouro</label>
            <input asp-for="Logradouro" class="form-control" />
            <span asp-validation-for="Logradouro"></span>
        </div>

        <div class="form-group col-md-3">
            <label>Numero</label>
            <input asp-for="Numero" class="form-control" />
            <span asp-validation-for="Numero"></span>
        </div>

        <div class="form-group col-md-3">
            <label>Complemento</label>
            <input asp-for="Complemento" class="form-control" />
            <span asp-validation-for="Complemento"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Bairro</label>
            <input asp-for="Bairro" class="form-control" />
            <span asp-validation-for="Bairro"></span>
        </div>

        <div class="form-group col-md-4">
            <label>Cidade</label>
            <input asp-for="Cidade" class="form-control" />
            <span asp-validation-for="Cidade"></span>
        </div>

        <div class="form-group col-md-1">
            <label>Estado</label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado"></span>
        </div>
        <div class="form-group col-md-3">
            <label>CEP</label>
            <input asp-for="Cep" class="form-control" />
            <span asp-validation-for="Cep"></span>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label>Razão Social</label>
            <input asp-for="RazaoSocial" class="form-control" />
            <span asp-validation-for="RazaoSocial"></span>
        </div>
        <div class="form-group col-md-4">
            <label>CNPJ</label>
            <input asp-for="Cnpj" class="form-control" />
            <span asp-validation-for="Cnpj"></span>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>