@model List<Cliente>

<h2>Listagem de Clientes</h2>
<div style="display: flex; flex-direction: column;">

    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Cnpj</th>
            <th>RazaoSocial</th>
            <th>Status</th>
            <th></th>
        </tr>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Cnpj</td>
                <td>@cliente.RazaoSocial</td>
                <td>@cliente.Status</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/cliente/update/@cliente.Id">
                        Editar
                    </a>
                    <a class="btn btn-sm btn-danger" href="/cliente/delete/@cliente.Id">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<a class="btn btn-primary" href="/cliente/create">Adicionar</a>
