@model Veiculo

<form asp-controller="Veiculo" asp-action="Create" method="POST">
    <div class="form-row">
        <div class="form-group col-md-8">
            <label>Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Marca</label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Placa</label>
            <input asp-for="Placa" class="form-control" />
            <span asp-validation-for="Placa"></span>
        </div>
        <div class="form-group col-md-3">
            <label>Valor Diária</label>
            <input asp-for="ValorDiaria" class="form-control" />
            <span asp-validation-for="ValorDiaria"></span>
        </div>
        <div class="form-group col-md-3">
            <label>Lugares</label>
            <input asp-for="Lugares" class="form-control" />
            <span asp-validation-for="Lugares"></span>
        </div>
        <div class="form-group col-md-3">
            <label>Carga</label>
            <input asp-for="Carga" class="form-control" />
            <span asp-validation-for="Carga"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Categoria</label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria"></span>
        </div>
        <div class="form-group col-md-4">
            <label>Tipo</label>
            <input asp-for="Tipo" class="form-control" />
            <span asp-validation-for="Tipo"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>